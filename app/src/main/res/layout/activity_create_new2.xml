<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gncis.test1.CreateNewActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="TEST"
            android:textSize="45sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_tag_faces_black_36dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textSize="20dp"
                android:text="Name : "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@color/colorPrimaryLight"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_event_available_black_24dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Start Date :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_event_busy_black_24dp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="End Date :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_people_black_24dp" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Members in the Party :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/party"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/image6"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_hotel_black_24dp" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Hotel :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hotel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

            <ImageButton
                android:id="@+id/crm"
                android:background="@color/colorPrimaryLight"
                android:src="@drawable/confrim_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="30dp"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/ccl"
                android:background="@color/colorPrimaryLight"
                android:src="@drawable/cancel_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="30dp"
                android:scaleType="fitCenter"/>


        </LinearLayout>


    </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
