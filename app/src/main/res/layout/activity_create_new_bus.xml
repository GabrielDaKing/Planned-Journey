<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gncis.test1.CreateNewBus">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="BUS"
                android:textSize="45sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/bus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/sic_directions_bus_black_36dp" />

                <EditText
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="Bus Number"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_airline_seat_recline_extra_black_24dp"/>

                <EditText
                    android:id="@+id/seat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:hint="Seat"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_busy_black_24dp" />

                <EditText
                    android:id="@+id/origin"
                    android:layout_width="0dp"
                    android:hint="Origin"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_busy_black_24dp" />

                <EditText
                    android:id="@+id/destination"
                    android:layout_width="0dp"
                    android:hint="Destination"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_available_black_24dp" />

                <EditText
                    android:id="@+id/StartDate2"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Departure Date " />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image41"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_busy_black_24dp" />

                <EditText
                    android:id="@+id/StartTime2"
                    android:layout_width="0dp"

                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Departure Time" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_busy_black_24dp" />

                <EditText
                    android:id="@+id/EndDate2"
                    android:layout_width="0dp"

                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Arrival Date : DD-MM-YY" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_busy_black_24dp" />

                <EditText
                    android:id="@+id/EndTime2"
                    android:layout_width="0dp"

                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Arrival Time" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/crm"
                    android:background="@color/colorPrimaryLight"
                    android:src="@drawable/confrim_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="30dp"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:id="@+id/ccl"
                    android:background="@color/colorPrimaryLight"
                    android:src="@drawable/cancel_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="30dp"
                    android:scaleType="fitCenter"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
