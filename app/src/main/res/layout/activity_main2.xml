<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gncis.test1.Main2Activity">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/button_send1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:background="@drawable/buttom_custom"
                android:text="VIEW CURRENT"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/button_send2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/button_custom2"
                    android:text="CREATE NEW" />

                <Button
                    android:id="@+id/button_send3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/button_custom3"
                    android:text="VIEW OLD" />

            </LinearLayout>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>
