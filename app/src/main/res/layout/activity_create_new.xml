<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gncis.test1.CreateNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <EditText
            android:id="@+id/name"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Name Of Journey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/plane"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:src="@drawable/ic_flight_black_36dp"
                android:background="@drawable/buttom_custom"
                android:layout_margin="5dp"/>

            <ImageButton
                android:id="@+id/train"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:src="@drawable/ic_directions_railway_black_36dp"
                android:background="@drawable/button_custom2"
                android:layout_margin="5dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="2">
        <ImageButton
            android:id="@+id/boat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:src="@drawable/ic_hotel_black_24dp"
            android:background="@drawable/button_custom3"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/bus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:src="@drawable/ic_directions_bus_black_36dp"
            android:background="@drawable/button_custom4"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cancel_button2"
            android:layout_margin="5dp"
            android:src="@drawable/cancel_button"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/confirm_button2"
            android:layout_margin="5dp"
            android:src="@drawable/confrim_button"
            android:scaleType="fitCenter"
            />

    </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
