<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewHotel">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="HOTEL"
                android:textSize="45sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_tag_faces_black_36dp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:hint="Name"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_place_black_36dp"/>

                <EditText
                    android:id="@+id/seat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="44dp"
                    android:hint="Location"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_alarm_black_24dp" />

                <EditText
                    android:id="@+id/Origin"
                    android:layout_width="0dp"
                    android:hint="Duration"
                    android:layout_height="44dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_available_black_24dp" />

                <EditText
                    android:id="@+id/StartDate2"
                    android:layout_width="0dp"
                    android:editable="false"
                    android:hint="Check-In Date : DD-MM-YY"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_height="44dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_event_busy_black_24dp" />

                <EditText
                    android:id="@+id/destination"
                    android:layout_width="0dp"
                    android:hint="Check-Out Date : DD-MM-YY"
                    android:layout_height="44dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/sic_hotel_black_24dp" />

                <EditText
                    android:id="@+id/StartTime2"
                    android:layout_width="0dp"

                    android:hint="Room Type"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_height="44dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>